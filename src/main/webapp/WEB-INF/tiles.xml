<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">  
 
<tiles-definitions>  
  
   <!-- Base Definition -->
   <definition name="base-definition"
       template="/jsp/tiles/layouts/defaultLayout.jsp">  
       <put-attribute name="title" value="" />  
       <put-attribute name="header" value="/jsp/tiles/template/defaultHeader.jsp" />
       <put-attribute name="leftPanel" value="/jsp/tiles/template/leftPanel.jsp" />
       <put-attribute name="rightPanel" value="/jsp/tiles/template/rightPanel.jsp" />
       <put-attribute name="footer" value="/jsp/tiles/template/defaultFooter.jsp" />  
   </definition>  
    <!-- Base Definition without header & Footer -->
   <definition name="base-definition-without-layout"
       template="/jsp/tiles/layouts/withoutLayout.jsp">  
       <put-attribute name="title" value="" />         
   </definition>  
  
   <!-- Home Page -->
   <definition name="dashboard" extends="base-definition">  
       <put-attribute name="title" value="Welcome" />  
       <put-attribute name="body" value="/jsp/pages/dashboard.jsp" />  
   </definition>
   
   <!-- Hello Page -->
   <definition name="hello" extends="base-definition-without-layout">  
       <put-attribute name="title" value="hello" />  
       <put-attribute name="body" value="/jsp/pages/hello.jsp" />  
   </definition>
   
   <!-- Login Page -->
   <definition name="login" extends="base-definition-without-layout" >  
       <put-attribute name="title" value="Login" />  
       <put-attribute name="body" value="/jsp/pages/login.jsp" />  
   </definition>
   <!-- Item Master Page -->
   <definition name="itemMaster" extends="base-definition" >  
       <put-attribute name="title" value="ItemMaster" />  
       <put-attribute name="body" value="/jsp/pages/itemMaster.jsp" />  
   </definition>   
  
  <!-- Stock Register Page -->
   <definition name="stockRegister" extends="base-definition">  
       <put-attribute name="title" value="StockRegister" />  
       <put-attribute name="body" value="/jsp/pages/stockRegister.jsp" />  
   </definition>
   
   <!-- Sales Register Page -->
   <definition name="salesRegister" extends="base-definition">  
       <put-attribute name="title" value="SalesRegister" />  
       <put-attribute name="body" value="/jsp/pages/salesRegister.jsp" />  
   </definition>
   
</tiles-definitions>